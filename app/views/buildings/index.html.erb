<p id="notice"><%= notice %></p>

<h1 class="fw-light">Buildings</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location latitude</th>
        <th>Location longitude</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @buildings.each do |building| %>
        <tr>
          <td><%= building.name %></td>
          <td><%= building.location_latitude %></td>
          <td><%= building.location_longitude %></td>
          <td class="td-btn"><%= link_to 'Show', building, class: "btn btn-secondary link-btn" %></td>
          <td class="td-btn"><% if can? :update, building %><%= link_to 'Edit', edit_building_path(building), class: "btn btn-secondary link-btn" %><%end%></td>
          <td class="td-btn"><% if can? :destroy, building %><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary link-btn" %><%end%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<% if can? :create, Building%>
  <%= link_to 'New Building', new_building_path, class: "btn btn-primary link-btn" %>
<% end %>
