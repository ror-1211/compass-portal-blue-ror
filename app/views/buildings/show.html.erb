<h2 class="mb-3 fw-light"><%= @building.name %></h2>

<div class="field mb-3">
  <label class="form-label">
    <strong>Name:</strong>
  </label>
  <p class="form-control-static">
  <%= @building.name %>
  </p>
</div>

<%= link_to map_path(path: "route", dest: @building.name), class: "btn btn-primary" do %>
  <i class="fas fa-route"></i> Directions
<% end %>

<script id="_latlonginfo" type="application/json">
[<%= @building.location_latitude %>,<%= @building.location_longitude %>]
</script>
